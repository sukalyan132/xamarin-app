<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             Title="Baby Section"
             x:Class="CloudCakes.BabySection">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Create account" TextColor="White" FontSize="20"></Label>
            <Entry x:Name="FirstName" Placeholder="User Name" WidthRequest="150"></Entry>
            <Entry x:Name="MiddleName" Placeholder="Password" WidthRequest="150"></Entry>
            <StackLayout Orientation="Horizontal">
                <Button BackgroundColor="Gray" TextColor="White" Text="Save" />
                <Button BackgroundColor="Maroon" TextColor="White" Text="Cancel" />
            </StackLayout>
            <StackLayout>
                <Button BackgroundColor="Blue" TextColor="White" Text="Forget Password" Clicked="Gotoforgetpassword"/>
            </StackLayout>
            <StackLayout>
                <Button BackgroundColor="Blue" TextColor="White" Text="Registration" Clicked="Gotoregisterpage"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>